{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ES5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "plugins": [
            {
              "name": "typescript-plugin-css-modules"
            }
        ]
    },
    "ts-node":{
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}